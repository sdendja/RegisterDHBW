<body>
		<div class="modal fade" id="myModal" role="dialog">
						  
		<div class="modal-dialog">
		
		<!-- Modal content-->
						  
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title">Anmeldung</h4>
				</div>
				<form name="form" id="formAddUser" method="post" action="/adduser">
			   	<div class="modal-body">
						<div class="container-fluid">
								
								 
									<div class="form-group row">
										<label for="username" class="col-sm-3 col-form-label">Vorname:</label>
											<input type="text" class="form-control col-sm-9" id="username" placeholder="Vorname Eingeben" name="username" required>
									</div>
									   
									<div class="form-group row">
											<label for="lastname" class="col-sm-3 col-form-label">Nachname:</label>
											<input type="text" class="form-control col-sm-9" id="lastname" placeholder="Nachname Eingeben" name="lastname" required>
									</div>
									
									<div class="form-group row">
											<label for="useremail" class="col-sm-3 col-form-label">Email:</label>
											<input type="email" class="form-control col-sm-9" id="useremail" placeholder="Email Eingeben" name="useremail" required>
									</div>
									
									<div class="form-group row">
											<label for="renewemail" class="col-sm-3 col-form-label">Email:</label>
											<input type="email" class="form-control col-sm-9" id="renewemail" placeholder="Email Wiederholen" name="renewemail" required>
									</div>
	
									<div class="form-group row">
											<label for="stadt" class="col-sm-3 col-form-label">Stadt:</label>
											<input type="text" class="form-control col-sm-9" id="stadt" placeholder="Stadt Eingeben" name="stadt" required>
									</div>
	
									<div class="form-group row">
											<label for="plz" class="col-sm-3 col-form-label">PLZ:</label>
											<input type="text" class="form-control col-sm-9" id="plz" placeholder="PLZ Eingeben" name="plz" required>
									</div>
	
									<div class="form-group row">
											<label for="birth" class="col-sm-3 col-form-label">Geburtsdatum:</label>
											<input type="date" class="form-control col-sm-9" id="birth" placeholder="Geburtsdatum" name ="birth" required>
									</div>
								
				  
								

									
	      			</div>
	      		</div>
	      		<div class="modal-footer">
	       			<button id="btnSubmit" class="btn btn-primary btn-sm" type="submit" onclick="return starteRegistrierung()" >Registrieren</button>
         			<button type="button" class="btn btn-sm" data-dismiss="modal" aria-label="Close">Abbrechen</button>
	   			</div>
				</form>

				
				
	   		</div>
  		</div>
	</div>
	
	
	
	


	
	


